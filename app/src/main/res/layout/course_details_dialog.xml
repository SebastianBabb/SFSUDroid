<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Course Name"
        android:id="@+id/dialog_course_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Instructor:"
        android:id="@+id/dialog_course_instructor"
        android:layout_below="@+id/dialog_course_name"
        android:layout_toStartOf="@+id/dialog_course_name"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Meet time:"
        android:id="@+id/dialog_meet_time"
        android:layout_below="@+id/dialog_course_instructor"
        android:layout_alignStart="@+id/dialog_course_instructor"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/dialog_cancel_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/dialog_meet_time"
        android:layout_marginBottom="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add event"
        android:id="@+id/dialog_add_event"
        android:layout_marginEnd="69dp"
        android:layout_alignTop="@+id/dialog_cancel_button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="course#"
        android:id="@+id/dialog_course_number"
        android:layout_below="@+id/dialog_course_name"
        android:layout_centerHorizontal="true" />

</RelativeLayout>